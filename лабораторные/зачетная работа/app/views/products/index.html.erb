<h1>Товары</h1>
<p id="notice"><%= notice %></p>
<% if is_admin? %>
<%= link_to 'Добавить товар', new_product_path %>
<% end %>


<%= form_tag("/products/add", :method=>"post") do %>
<table align = "center" border = "1px">
  <thead>
    <tr>
      <th>Название</th>
      <th>О товаре</th>
      <th>Цена</th>
      <th>Изображение</th>
      <th colspan="3">Параметры</th>
      <th> Количество </th>
    </tr>
  </thead>
  <tbody>
    <% @products.each_with_index do |product, index| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.about %></td>
        <td><%= product.price %></td>
        <td><%= image_tag product.img, width: 400 %></td>
        <td><%= link_to 'Показать', product %></td>
        <% if is_admin? %>
        <td><%= link_to 'Изменить', edit_product_path(product) %></td>
        <td><%= link_to 'Удалить', product, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
        <% end %>
        <td><%= text_field_tag "val#{index}".to_sym %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= submit_tag("Заказать!") %>
	    <% end %>