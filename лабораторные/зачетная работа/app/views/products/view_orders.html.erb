<p id="notice"><%= notice %></p>
<table align = "center" class = "block" border = "1px" width = "600px">
<tr>
<th>ID юзера</th>
<th>Номер заказа</th>
<th>Заказ</th>
<th>Стоимость</th>
<th>Статус</th>
</tr>
  <% @orders.each do |x| %>
<tr>
  <td><%=  x.user_id %></td>
  <td><%=  x.id %></td>
  <td><%= x.content %></td>
  <td><%= x.total %></td>
  <td><%= x.status %></td> 
  <td><%= link_to 'Подтвердить доставку', "/products/done/#{x.id}" %></td>
  <td><%= link_to 'Отменить', "/products/cancel/#{x.id}" %></td>
</tr>
   <% end %>
</table>